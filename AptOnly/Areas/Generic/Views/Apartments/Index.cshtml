@model IEnumerable<AptOnly.Models.Apartment>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Floor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bedroom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BathRoom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PricePerMonth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsFurbished)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.M2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PricePerM2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Floor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Bedroom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BathRoom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PricePerMonth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsFurbished)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.M2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PricePerM2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Image)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ApartmentId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ApartmentId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ApartmentId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
